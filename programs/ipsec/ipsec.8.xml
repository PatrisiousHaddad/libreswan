  <refsynopsisdiv id='synopsis'>
    <cmdsynopsis>
      <command>ipsec</command>
      <arg choice='plain'><replaceable>command</replaceable></arg>
      <arg choice='opt' rep='repeat'><replaceable>argument</replaceable></arg>
    </cmdsynopsis>
